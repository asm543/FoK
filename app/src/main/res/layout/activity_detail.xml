<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@drawable/bar9"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_side"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btnback" />

        <Button
            android:id="@+id/btn_map_home"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:layout_marginLeft="110dp"
            android:layout_gravity="center"
            android:background="@drawable/mark2"
            />

        <Button
            android:id="@+id/btn_set"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_weight="0"
            android:background="@drawable/btnset" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detaback"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="여행지 또는 축제 검색"
                android:textColor="#2b2b2b" />

            <ImageView
                android:id="@+id/btnsearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/btnsearch" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/detaback2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/detaback3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/detaback2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgbtn_detail"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/txt_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#FFFFFF"
                        android:text="제목 : \n상세정보 : \n시작일 : \n종료일 : \n전화번호 : \n주소 : \n주최 : \n주관 : " />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:text="지도" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/detaback2"
                    android:orientation="vertical"></LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:text="추천 정보" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/mainbar2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_margin="10dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bar10"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/imgbtn_detail_hot1"
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/txt_detail_title1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="20dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_detail_where1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_detail_date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_margin="10dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bar10"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/imgbtn_detail_hot2"
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/txt_detail_title2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="20dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_detail_where2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_detail_date2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_margin="10dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bar10"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/imgbtn_detail_hot3"
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/txt_detail_title3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="20dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_detail_where3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_detail_date3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="#ffffff"
                                android:text="TextView" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>